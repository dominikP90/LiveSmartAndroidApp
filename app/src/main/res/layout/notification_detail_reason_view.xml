<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_reason_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/notificationReasonText1"
        android:text="Notification reasons:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="25sp"
        android:paddingTop="20dip"
        android:paddingBottom="20dip"/>

    <TextView
        android:id="@+id/notificationReasonText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_below="@id/notificationReasonText1"/>

    <TextView
        android:id="@+id/notificationAdvanced"
        android:text="Show advanced notification reasons..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="advancedNotifactionDetails"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="15sp"
        android:paddingTop="5dip"
        android:layout_below="@id/notificationReasonText2"/>


</RelativeLayout>